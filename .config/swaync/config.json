{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "cssPriority": "user",
  "control-center-margin-top": 1,
  "control-center-margin-bottom": 1,
  "control-center-margin-right": 1,
  "control-center-margin-left": 0,
  "notification-2fa-action": true,
  "notification-inline-replies": true,
  "notification-icon-size": 52,
  "notification-body-image-height": 100,
  "notification-body-image-width": 200,
  "notification-window-width": 400,
  "timeout": 6,
  "timeout-low": 3,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "control-center-width": 400,
  "control-center-height": 800,
  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": false,
  "hide-on-action": true,
  "script-fail-notify": true,
  "widgets": [
    "dnd",
    "buttons-grid",
    "mpris",
    "volume",
    "backlight",
    "title",
    "notifications"
  ],
  "widget-config": {
    "title": {
      "text": "通知",
      "clear-all-button": true,
      "button-text": ""
    },
    "dnd": {
      "text": "お休みモード"
    },
    "label": {
      "max-lines": 1,
      "text": "Notifications"
    },
    "mpris": {
      "image-size": 50,
      "image-radius": 0
    },
    "volume": {
      "label": " "
    },
    "backlight": {
      "label": " ",
      "device": "intel_backlight"
    },
    "buttons-grid": {
      "actions": [
        {
          "label": " ",
          "type": "toggle",
          "active": false,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && pactl set-sink-mute @DEFAULT_SINK@ 1 || pactl set-sink-mute @DEFAULT_SINK@ 0'",
          "update-command": "sh -c '[[ $(pactl get-sink-mute @DEFAULT_SINK@) == *yes* ]] && echo true || echo false'"
        },
        {
          "label": " ",
          "type": "toggle",
          "active": false,
          "command": "sh -c '[[ $SWAYNC_TOGGLE_STATE == true ]] && pactl set-source-mute @DEFAULT_SOURCE@ 1 || pactl set-source-mute @DEFAULT_SOURCE@ 0'",
          "update-command": "sh -c '[[ $(pactl get-source-mute @DEFAULT_SOURCE@) == *yes* ]] && echo true || echo false'"
        },

        {
          "label":"󰀝",
          "command": "bash -c $HOME/.config/hypr/scripts/airplaneMode.sh",
          "type": "toggle"
        },

        {
          "label": "󰌾",
          "command": "hyprlock"
        },
        {
          "label": "󰍃",
          "command": "wlogout"
        }

      ]
    }
  }
}
